task :default => [:status]

task :status do
  o = `git-log | grep oleganza -c`.to_i
  y = `git-log | grep yrashk -c`.to_i
  sum = o + y
  op = o*100/sum
  yp = y*100/sum
  puts ""
  puts "        Commit status        "
  puts "--------             --------"
  puts "oleganza  #{op}% â€” #{yp}%  yrashk"
  puts ""
end

task :benchmarks do
  paths = Dir['test/**/*_benchmark.rb']
  paths.each do |path| 
    ruby path
    puts ""
  end
end

task :ci do
  sh 'spec spec'
end
